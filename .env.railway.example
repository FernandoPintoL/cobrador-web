# Plantilla de .env para Railway con Laravel Reverb
APP_NAME=Cobrador
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://cobrador-web-production.up.railway.app
SESSION_DOMAIN=cobrador-web-production.up.railway.app
SANCTUM_STATEFUL_DOMAINS=cobrador-web-production.up.railway.app
APP_TRUSTED_PROXIES=*

LOG_CHANNEL=stack
LOG_LEVEL=info

# Base de datos (Railway provisiona variables propias si añades PostgreSQL/MySQL)
DB_CONNECTION=pgsql
DB_HOST=
DB_PORT=
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Redis recomendado
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=redis
REDIS_URL=

# Broadcasting con Reverb
BROADCAST_DRIVER=reverb
REVERB_APP_ID=cobrador-app
REVERB_APP_KEY=cambia-esta-clave
REVERB_APP_SECRET=cambia-este-secreto
REVERB_HOST=0.0.0.0
REVERB_PORT="${PORT}"
REVERB_SCHEME=http

# Variables para Vite (cliente Echo)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
# Usar el dominio público en producción (Railway)
VITE_REVERB_HOST=cobrador-web-production.up.railway.app
# Para WSS, usar 443
VITE_REVERB_PORT=443
VITE_REVERB_SCHEME=https
VITE_REVERB_FORCE_TLS=true
REVERB_ALLOWED_ORIGINS=https://cobrador-web-production.up.railway.app
